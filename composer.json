{
    "name": "detailnet/dfw-normalization",
    "description": "DETAIL Framework library for array/object (de-)normalization",
    "type": "library",
    "keywords": [
        "dfw",
        "detailnet",
        "normalization",
        "serialization",
        "hydration"
    ],
    "homepage": "https://github.com/detailnet/dfw-normalization/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "jms/serializer": "^3.10"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^0.12.19",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpunit/phpunit": "^9.5",
        "ramsey/uuid": "^4.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer" : "^3.5"
    },
    "suggest": {
        "ramsey/uuid": "For usage of the UUID handler of the JMS Serializer"
    },
    "autoload": {
        "psr-4": {
            "Detail\\Normalization\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DetailTest\\Normalization\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@stan-check",
            "@test"
        ],
        "cs-check": "phpcs -s",
        "cs-fix": "phpcbf",
        "stan-check": "phpstan analyse",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-html build/coverage"
    }
}
